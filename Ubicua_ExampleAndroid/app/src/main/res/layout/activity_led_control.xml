<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center">

    <TextView
        android:text="CONTROL ILUMINACIÓN"
        android:textColor="@color/text_secondary"
        android:textSize="20sp"
        android:layout_marginBottom="40dp"
        android:letterSpacing="0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnOff"
        android:text="APAGAR (OFF)"
        android:backgroundTint="#555555"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnAuto"
        android:text="MODO AUTOMÁTICO"
        android:backgroundTint="@color/neon_yellow"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:text="Selección Manual de Color"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnRed"
        android:text="ROJO"
        android:backgroundTint="@color/neon_red"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnGreen"
        android:text="VERDE"
        android:backgroundTint="@color/neon_green"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnBlue"
        android:text="AZUL"
        android:backgroundTint="@color/neon_blue"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

</LinearLayout>