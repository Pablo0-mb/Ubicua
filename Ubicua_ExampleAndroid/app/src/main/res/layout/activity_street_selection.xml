<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:text="SENSOR HISTORY ANALYTICS"
            android:textColor="@color/neon_blue"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/surface_dark"
            app:cardElevation="4dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartSensores"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="10dp"/>
        </com.google.android.material.card.MaterialCardView>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/surface_dark"
            android:dividerHeight="2dp"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:src="@drawable/ic_delete"
        app:tint="@color/background_dark"
        app:backgroundTint="@color/neon_red"
        app:elevation="12dp"
        android:contentDescription="Borrar datos" />

</RelativeLayout>