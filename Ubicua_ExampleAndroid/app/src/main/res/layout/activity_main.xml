<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:text="UBICUA\nCONTROL CENTER"
        android:textColor="@color/neon_purple"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnHistoric"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/surface_dark"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/neon_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_history"
                app:tint="@color/neon_blue"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:text="HISTÓRICO\nDE DATOS"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnRealTime"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/surface_dark"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/neon_red">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_dashboard"
                app:tint="@color/neon_red"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:text="MONITOR\nTIEMPO REAL"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnLedControl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/surface_dark"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/neon_green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_led"
                app:tint="@color/neon_green"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:text="CONTROL\nILUMINACIÓN"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>